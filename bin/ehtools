#yellow start 
	YS="\e[1;33m"
#blue start 
	BS="\e[0;34m"
#color end
	CE="\e[0m"
#red start
	RS="\e[1;31m"
#black start
	BLS="\e[0;30m"
#dark gray start
	DGYS="\e[1;30m"
#light blue start
	LBS="\e[1;34m"
#green start
	GNS="\e[0;32m"
#light green start
	LGNS="\e[1;32m"
#cyan start
	CYS="\e[0;36m"
#light cyan start
	LCYS="\e[1;36m"
#light red start
	DRS="\e[0;31m"
#purple start
	PS="\e[0;35m"
#light purple start
	LPS="\e[1;35m"
#brown start
	BRS="\e[0;33m"
#light gray start
	LGYS="\e[0;37m"
#white start
	WHS="\e[1;37m"

if [[ -f /root/ehtools/settings/logocolor.txt ]]
	then
		read COL < "$EPATH"/settings/logocolor.txt
	else
		COL="$RS"
	fi


{
chattr -i /tmp/config
chattr -i /tmp/config/config.txt
chattr -i /tmp/config/configure.txt
} &> /dev/null

{
mkdir /tmp/config
echo 0 >> /tmp/config/config.txt
echo 1 >> /tmp/config/configure.txt
} &> /dev/null

{
chattr +i /tmp/config
chattr +i /tmp/config/config.txt
chattr +i /tmp/config/configure.txt
} &> /dev/null


{
SERSE="$( cat /tmp/config/config.txt | head -n 1 )"
ESRES="$( cat /tmp/config/configure.txt | head -n 1 )"
} &> /dev/null

if [[ "$SERSE" != "$ESRES" ]]
then

{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
KEYEK="$( cat /etc/ehtools/root/service/ehtkey.txt )"
} &> /dev/null

if [[ "$ASESR" != "" ]]
then 

KEYKE="$( timeout -s SIGTERM 40 curl "https://raw.githubusercontent.com/entynetproject/ECLI/master/hello.txt" 2>/dev/null )"

if [[ "$KEYEK" != "$KEYKE" ]]
then

sleep 1
echo -e "["$RS"*"$CE"] "$RS"Failed to open session for ehtools!"$CE""
sleep 1
echo -e "("$YS"it's may be caused by the fact that you have not bought ehtools or by bad internet connection!"$CE")"
sleep 1
exit

fi

else
sleep 1
echo -e "["$RS"*"$CE"] "$RS"Can't connect with server: There is no connection!"$CE""
sleep 1
exit
fi
fi

if [[ $1 = "-r" || $1 = "--remove" ]]
then
sleep 1
printf '\033]2;Launching uninstall.sh...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching uninstall.sh..."$CE""
sleep 1
cd /root/ehtools
chmod +x uninstall.sh
./uninstall.sh
exit

elif [[ $1 = "-u" || $1 = "--update" ]]
then
sleep 1
printf '\033]2;Launching euh...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching ehtools update helper..."$CE""
sleep 1
euh
exit


elif [[ $1 = "-h" || $1 = "--handshake" ]]
then
sleep 1
printf '\033]2;Launching eht1...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching eht1..."$CE""
sleep 1
eht1
exit


elif [[ $1 = "-w" || $1 = "--wps" ]]
then
sleep 1
printf '\033]2;Launching eht3...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching eht3..."$CE""
sleep 1
eht3
exit


elif [[ $1 = "-o" || $1 = "--options" ]]
then
sleep 1
echo -e
echo -e ""$YS"Options: "$CE""
echo -e ""$YS"-r"$CE") Remove ehtools"
echo -e ""$YS"-u"$CE") Update ehtools"
echo -e ""$YS"-h"$CE") Make handshake"
echo -e ""$YS"-w"$CE") WPS menu"
echo -e ""$YS"-o"$CE") Options"
echo -e
sleep 1
exit
fi

clear
printf '\033]2;Ehtools Authentication\a'
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS################################# $CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS#     Entynet Hacker Tools      # $CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS#       [Entynetproject]        # $CE"          
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS# entynetproject.simplesite.com # $CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS#   To open this run - ehtools  # $CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS################################# $CE"                                                                
echo -e "$YS"Ehtools Authentication:"$CE"

sleep 0.5
read -p $'(\e[4;93mlogin\e[0m\en)> ' loginer
logins=$(cat /etc/ehtools/login)

while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Root Authentication\a'
echo -e "You want to login as administrator"
echo -e "$YS"Ehtools Root Authentication:"$CE"
sleep 0.5
passroot="$( cat /etc/ehtools/root/password )"
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
exit
fi

done

while [ "$loginer" != "$logins" ]
do
echo -e "$RS"Wrong login!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -p $'(\e[4;93mlogin\e[0m\en)> ' loginer

while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Root Authentication\a'
echo -e "You want to login as administrator"
echo -e "$YS"Ehtools Root Authentication:"$CE"
sleep 0.5
passroot="$( cat /etc/ehtools/root/password )"
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
exit
fi

done
done

sleep 0.5
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' passworder
passwords=$(cat /etc/ehtools/password)
while [ "$passworder" != "$passwords" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' passworder

{
cd /root/ehtools/lib
chmod +x libunconf
./libunconf
rm /etc/ehtools/config
} &> /dev/null
done


if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
ehtconsole
fi
