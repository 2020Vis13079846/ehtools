#yellow start 
	YS="\e[1;33m"
#blue start 
	BS="\e[0;34m"
#color end
	CE="\e[0m"
#red start
	RS="\e[1;31m"
#black start
	BLS="\e[0;30m"
#dark gray start
	DGYS="\e[1;30m"
#light blue start
	LBS="\e[1;34m"
#green start
	GNS="\e[0;32m"
#light green start
	LGNS="\e[1;32m"
#cyan start
	CYS="\e[0;36m"
#light cyan start
	LCYS="\e[1;36m"
#light red start
	DRS="\e[0;31m"
#purple start
	PS="\e[0;35m"
#light purple start
	LPS="\e[1;35m"
#brown start
	BRS="\e[0;33m"
#light gray start
	LGYS="\e[0;37m"
#white start
	WHS="\e[1;37m"

if [[ -f /root/ehtools/settings/logocolor.txt ]]
	then
		read COL < /root/ehtools/settings/logocolor.txt
	else
		COL="$RS"
	fi

if [[ $EUID -ne 0 ]]
then
   echo "["$RS"*"$CE"] "$RS"This script must be run as "$YS"root"$CE"" 1>&2
   exit
fi

{
chattr -i /dev/config
chattr -i /dev/config/config.txt
chattr -i /dev/config/configure.txt
} &> /dev/null

{
mkdir /dev/config
echo 0 >> /dev/config/config.txt
echo 1 >> /dev/config/configure.txt
} &> /dev/null

{
chattr +i /dev/config
chattr +i /dev/config/config.txt
chattr +i /dev/config/configure.txt
} &> /dev/null


{
SERSE="$( cat /dev/config/config.txt | head -n 1 )"
ESRES="$( cat /dev/config/configure.txt | head -n 1 )"
} &> /dev/null

if [[ "$SERSE" != "$ESRES" ]]
then

{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
KEYEK="$( cat /etc/ehtools/root/service/ehtkey.txt )"
} &> /dev/null

if [[ "$ASESR" != "" ]]
then 

KEYKE="$( timeout -s SIGTERM 40 curl "https://raw.githubusercontent.com/dj-mobley/ehtools-config/master/ehtools.cfg" 2>/dev/null )"

if [[ "$KEYEK" != "$KEYKE" ]]
then

sleep 1
echo -e "["$RS"*"$CE"] "$RS"Failed to open session for ehtools!"$CE""

sleep 1
exit

fi

else
sleep 1
echo -e "["$RS"*"$CE"] "$RS"Can't connect to server: There is no connection!"$CE""
sleep 1
exit
fi
fi

if [[ $1 = "-u" || $1 = "--uninstall" ]]
then
sleep 1
printf '\033]2;Launching uninstall.sh...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching uninstall.sh..."$CE""
sleep 1
cd /root/ehtools
chmod +x uninstall.sh
./uninstall.sh
exit

elif [[ $1 = "-h" || $1 = "--handshake" ]]
then
sleep 1
printf '\033]2;Launching eht1...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching eht1..."$CE""
sleep 1
eht1
exit


elif [[ $1 = "-w" || $1 = "--wps" ]]
then
sleep 1
printf '\033]2;Launching eht3...\a'
echo -e "["$GNS"~"$CE"] "$GNS"Launching eht3..."$CE""
sleep 1
eht3
exit

elif [[ $1 = "-o" || $1 = "--options" ]]
then
sleep 1
echo -e
echo -e ""$YS"Options: "$CE""
echo -e ""$YS"-r"$CE") Uninstall ehtools"
echo -e ""$YS"-h"$CE") Make handshake"
echo -e ""$YS"-w"$CE") Open WPS menu"
echo -e ""$YS"-o"$CE") Show options"
echo -e
sleep 1
exit
fi

CAT="$( cat /etc/ehtools/password )"

clear
if [[ "$CAT" = "" ]]
then
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
fi
fi

printf '\033]2;Ehtools Authentication\a' 
cd /root/ehtools/lib
chmod +x libdec
./libdec
logins="$(cat /etc/ehtools/login)"
cd /root/ehtools/lib
chmod +x libenc
./libenc
      echo -e 
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS PRO$CE"
sleep 0.5
echo -e ""
echo -e "$YS"Ehtools Authentication:"$CE"
sleep 0.5
read -e -p $'(\e[4;93mlogin\e[0m\en)> ' loginer

while [ "$loginer" = "$logins" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS PRO$CE"
sleep 0.5
echo -e ""
cd /root/ehtools/lib
chmod +x libdec
./libdec
echo -e "You want to login as '"$YS""$(cat /etc/ehtools/login)""$CE"'"
cd /root/ehtools/lib
chmod +x libenc
./libenc
sleep 0.5
echo -e "$YS"Ehtools Authentication:"$CE"
sleep 0.5

cd /root/ehtools/lib
chmod +x libdec
./libdec
passroot="$(cat /etc/ehtools/password)"
cd /root/ehtools/lib
chmod +x libenc
./libenc

read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "["$RS"*"$CE"] "$RS"Wrong password!"$CE""
sleep 3
sleep 0
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
fi

done


while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS PRO$CE"
sleep 0.5
echo -e ""
echo -e "You want to login as '"$YS"root"$CE"'"
sleep 0.5
echo -e "$YS"Ehtools Authentication:"$CE"
sleep 0.5
cd /root/ehtools/lib
chmod +x libdec
./libdec
passroot="$(cat /etc/ehtools/root/password)"
cd /root/ehtools/lib
chmod +x libenc
./libenc
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "["$RS"*"$CE"] "$RS"Wrong password!"$CE""
sleep 3
sleep 0
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
fi

done

while [ "$loginer" != "$logins" ]
do
echo -e "["$RS"*"$CE"] "$RS"Wrong login!"$CE""
sleep 3
sleep 0
read -e -p $'(\e[4;93mlogin\e[0m\en)> ' loginer

while [ "$loginer" = "$logins" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS PRO$CE"
sleep 0.5
echo -e ""
cd /root/ehtools/lib
chmod +x libdec
./libdec
echo -e "You want to login as '"$YS""$(cat /etc/ehtools/login)""$CE"'"
cd /root/ehtools/lib
chmod +x libenc
./libenc
sleep 0.5
echo -e "$YS"Ehtools Authentication:"$CE"
sleep 0.5
cd /root/ehtools/lib
chmod +x libdec
./libdec
passroot="$(cat /etc/ehtools/password)"
cd /root/ehtools/lib
chmod +x libenc
./libenc
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "["$RS"*"$CE"] "$RS"Wrong password!"$CE""
sleep 3
sleep 0
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
fi

done


while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;Ehtools Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS PRO$CE"
sleep 0.5
echo -e ""
echo -e "You want to login as '"$YS"root"$CE"'"
sleep 0.5
echo -e "$YS"Ehtools Authentication:"$CE"
sleep 0.5
cd /root/ehtools/lib
chmod +x libdec
./libdec
passroot="$(cat /etc/ehtools/root/password)"
cd /root/ehtools/lib
chmod +x libenc
./libenc
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "["$RS"*"$CE"] "$RS"Wrong password!"$CE""
sleep 3
sleep 0
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done

if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/.config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
sleep 0
ehtconsole
exit
fi

done
done
