#yellow start 
	YS="\e[1;33m"
#blue start 
	BS="\e[0;34m"
#color end
	CE="\e[0m"
#red start
	RS="\e[1;31m"
#black start
	BLS="\e[0;30m"
#dark gray start
	DGYS="\e[1;30m"
#light blue start
	LBS="\e[1;34m"
#green start
	GNS="\e[0;32m"
#light green start
	LGNS="\e[1;32m"
#cyan start
	CYS="\e[0;36m"
#light cyan start
	LCYS="\e[1;36m"
#light red start
	DRS="\e[0;31m"
#purple start
	PS="\e[0;35m"
#light purple start
	LPS="\e[1;35m"
#brown start
	BRS="\e[0;33m"
#light gray start
	LGYS="\e[0;37m"
#white start
	WHS="\e[1;37m"

if [[ -f /root/ehtools/settings/logocolor.txt ]]
	then
		read COL < /root/ehtools/settings/logocolor.txt
	else
		COL="$YS"
	fi

WHO="$( whoami )"

if [[ "$WHO" != "root" ]]
then
sleep 1
echo -e "$RS"run it as"$CE" "$YS"root"$CE"
sleep 1
echo -e "$RS"or use"$CE" "$YS"sudo"$CE"
sleep 1
exit
fi

CAT="$( cat /etc/ehtools/password )"

clear
if [[ "$CAT" = "" ]]
then
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
fi
fi

printf '\033]2;ehtools Authentication\a' 
      echo -e 
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS LITE$CE"
sleep 0.5
echo -e "You want to login as '"$YS"user"$CE"'"
sleep 0.5
echo -e "$YS"ehtools Authentication:"$CE"
sleep 0.5
read -p $'(\e[4;93mlogin\e[0m\en)> ' loginer
logins=$(cat /etc/ehtools/login)

while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;ehtools Root Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS LITE$CE"
sleep 0.5
echo -e "You want to login as '"$YS"root"$CE"'"
sleep 0.5
echo -e "$YS"ehtools Root Authentication:"$CE"
sleep 0.5
passroot="$( cat /etc/ehtools/root/password )"
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done
if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
fi

done



while [ "$loginer" != "$logins" ]
do
echo -e "$RS"Wrong login!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -p $'(\e[4;93mlogin\e[0m\en)> ' loginer

while [ "$loginer" = "root" ]
do
sleep 0.5
clear
sleep 0.5
printf '\033]2;ehtools Root Authentication\a'
      echo -e
      echo -e "$COL       ███████╗██╗  ██╗████████╗   $WHS Name |$RS Entynet Hacker Tools$CE" 
      echo -e "$COL       ██╔════╝██║  ██║╚══██╔══╝   $WHS Ver  |$RS v3.0.0$WHS :$YS finally$CE"                
      echo -e "$COL       █████╗  ███████║   ██║      $WHS Core |$RS TEF$WHS :$YS The Ehtools Framework$CE"         
      echo -e "$COL       ██╔══╝  ██╔══██║   ██║      $WHS Dev  |$RS Ehtools Team$CE"                 
      echo -e "$COL       ███████╗██║  ██║   ██║      $WHS Site |$YS https://ehtools.pro/$CE"
      echo -e "$COL       ╚══════╝╚═╝  ╚═╝   ╚═╝      $WHS Plan |$RS Ehtools Framework$WHS :$YS LITE$CE"
sleep 0.5
echo -e "You want to login as '"$YS"root"$CE"'"
sleep 0.5
echo -e "$YS"ehtools Root Authentication:"$CE"
sleep 0.5
passroot="$( cat /etc/ehtools/root/password )"
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

while [ "$rootpass" != "$passroot" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' rootpass

done

if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
exit
fi

done
done

sleep 0.5
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' passworder
passwords=$(cat /etc/ehtools/password)
while [ "$passworder" != "$passwords" ]
do
echo -e
echo -e "$RS"Wrong password!"$CE"
sleep 3
echo -e "("$YS"Try again..."$CE")"
sleep 2
read -s -p $'(\e[4;93mpassword\e[0m\en)> ' passworder

{
cd /root/ehtools/lib
chmod +x libunconf
./libunconf
rm /etc/ehtools/config
} &> /dev/null
done



if [[ -f /bin/ehtools/ehtconsole ]]
then
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
else
{
chattr -i /etc/ehtools
cp /root/ehtools/etc/config /etc/ehtools
cd /root/ehtools/lib
chmod +x libconf
./libconf
cp /root/ehtools/bin/ehtconsole /bin/ehtools
chattr -i /bin/ehtools/ehtconsole
chmod +x /bin/ehtools/ehtconsole
chattr +i /bin/ehtools/ehtconsole
chattr +i /etc/ehtools
} &> /dev/null
trap '' INT TSTP
trap '' 2
ehtconsole
fi
